<%- include("../partials/header") %>

<div class="container">
    <div style="width: auto; margin-left: 25%; margin-right: 25%;">
        <h1 style="margin-top: 30px;"> Create a new campground </h1>
        <div style="margin-top: 30px;"> 
            <form action="/campgrounds" method="POST">
                <div class="form-group"> 
                    <input class="form-control" type="text" placeholder="name" name="name">
                </div>
                <div class="form-group"> 
                    <input class="form-control" type="text" placeholder="image url" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description"> 
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-lg btn-block btn-outline-dark"> </input>
                </div>
            </form>
            <a class="btn btn-lg btn-block btn-outline-warning" href="/campgrounds"> < Return </a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>