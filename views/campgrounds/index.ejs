<%- include("../partials/header") %>

<div class="container-fluid">
    <header class="jumbotron"> 
        <div class="container">
            <h1> Welcome to YelpCamp! </h1>
            <p> Choose a campground. Pack your bag. Let's go!</p>
             <p>
            <a class="btn btn-outline-dark btn-large" href="/campgrounds/new"> Add A New Campground! </a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <% campgrounds.forEach(campground => { %>
            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12">
                <figure class="figure">
                    <img class="img-fluid rounded" src="<%= campground.image %>">
                    <figcaption class="figure-caption"> 
                        <h4> <%= campground.name %> </h4>
                    </figcaption>
                    <p> 
                        <a href="/campgrounds/<%=campground._id %>" class="btn btn-outline-info"> More info </a>
                    </p>
                </figure>
            </div>
        <% }) %>
    </div>
</div>


<%- include("../partials/footer") %>