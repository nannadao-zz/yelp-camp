<%- include("./partials/header") %>

<div id="loginContainer" class="container">
    <div class="row">
        <div class="col-7"> 
            <div class="text-center"> 
                <img src="https://media.istockphoto.com/vectors/friendship-cartoon-illustration-vector-id1089499560?k=6&m=1089499560&s=612x612&w=0&h=ltXEMjyFKXmzhd6ezXAKdNqXMX0YtR6KU9YNCXwp5CQ="
                class="rounded float-left"> 
            </div>
        </div>
        <div class="col-5"> 
            <div>
                <h2 id="loginText" class="text-center"> Login </h2>
                <form action="/login" method="POST"> 
                    <div class="form-group">
                        <label for="email"> Email </label>
                        <input class="form-control" type="email" name="email" placeholder="email">
                        <small id="emailHelp" class="form-text text-muted"> I don't collect email so gibberish will work </small>
                    </div>
                    <div class="form-group">
                        <label for="password"> Password </label>
                        <input class="form-control" type="password" name="password" placeholder="password">
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-lg btn-warning"> </input>
                    </div>
                </form>
                <p> Create a new account?
                    <a href="/register"> Register </a>
                </p>
            </div>
        </div>
    </div>
</div>


<%- include("./partials/footer") %>